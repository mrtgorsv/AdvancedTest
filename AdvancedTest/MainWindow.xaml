<Window x:Class="AdvancedTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedTest"
        mc:Ignorable="d"
        Title="Тестирование" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <TreeView DockPanel.Dock="Left" Width="200px" ItemsSource="{Binding TheoryParts }"
                      SelectedItemChanged="OnSelectedTheoryPartChanged">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding TheoryDocuments}">
                        <TextBlock Text="{Binding Name}"/>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <ContentControl Content="{Binding SelectedPart}"/>
        </DockPanel>
    </Grid>
</Window>
